<tr class="hover:bg-[#4d4f50] <%= product.id.even? ? 'bg-bg-secondary': 'bg-bg-ternary' %>" id="<%= dom_id product %>">
  <td class="px-4 py-2 text-center"><input type="checkbox" value="<%= product.id %>"></td>
  <td class="px-4 py-2 text-center">
    <div><%= product.name %></div>
    <img src="<%= product.image.url %>" alt="<%= product.name %>" class="w-16 h-16 object-cover mt-2">
  </td>
  <td class="px-4 py-2 text-center"><%= product.id %></td>
  <td class="px-4 py-2 text-center"><%= product.stock %></td>
  <% unless @category.present? %>
    <td class="px-4 py-2 text-center"><%= product.category.name %></td>
  <% end %>
  <td class="px-4 py-2 text-center"><%= product.price %></td>
  <td class="px-4 py-2 text-center">
    <div class=" <%= product.in_stock? ? 'text-green-600' : 'text-red-600'%>">
      <%= product.availability.humanize %>
    </div>
  </td>
  <td class="px-4 py-2 text-center">
    <a href="<%= edit_product_path(product) %>" class="text-blue-500 hover:text-blue-700">
      <svg width="22" height="23" viewBox="0 0 22 23" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3.66406 15.9572V18.0591C3.66406 18.1807 3.71235 18.2972 3.79831 18.3832C3.88426 18.4692 4.00084 18.5174 4.1224 18.5174H6.2289C6.35022 18.5174 6.46658 18.4693 6.55248 18.3836L15.2131 9.72294L12.4631 6.97294L3.79881 15.6336C3.7128 15.7194 3.66433 15.8357 3.66406 15.9572ZM13.598 5.83719L16.348 8.58719L17.6863 7.24886C17.8582 7.07696 17.9547 6.84384 17.9547 6.60077C17.9547 6.35771 17.8582 6.12459 17.6863 5.95269L16.2334 4.49886C16.0615 4.32701 15.8284 4.23047 15.5853 4.23047C15.3422 4.23047 15.1091 4.32701 14.9372 4.49886L13.598 5.83719Z" fill="white"/>
      </svg>
    </a>
    <a href="<%= product_path(product) %>" data-method="delete" data-confirm="Are you sure?" class="text-red-500 hover:text-red-700 ml-2">
      <svg width="22" height="23" viewBox="0 0 22 23" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M6.97911 18.5183C6.55745 18.5183 6.20545 18.3772 5.92311 18.0948C5.64017 17.8119 5.4987 17.4596 5.4987 17.0379V5.685H4.58203V4.76833H8.2487V4.0625H13.7487V4.76833H17.4154V5.685H16.4987V17.0379C16.4987 17.4596 16.3575 17.8116 16.0752 18.0939C15.7923 18.3769 15.4399 18.5183 15.0183 18.5183H6.97911ZM8.98936 15.7683H9.90603V7.51833H8.98936V15.7683ZM12.0914 15.7683H13.008V7.51833H12.0914V15.7683Z" fill="#E70000"/>
      </svg>
    </a>
  </td>
</tr>
