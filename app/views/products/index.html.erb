<% content_for :title, "Products" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%= turbo_frame_tag "products" do%>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">
        <% if @category %>
          @category.name
        <% else %>
          Popular Items
        <% end %>
      </h1>
      <%= link_to "New product", new_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
    <div id="products" class="min-w-full">
      <% if @products.any? %>
        <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden shadow">
          <thead>
            <tr>
              <th class="px-4 py-2"><input type="checkbox"></th>
              <th class="px-4 py-2">Product</th>
              <th class="px-4 py-2">Item ID</th>
              <th class="px-4 py-2">Stock</th>
              <% unless @category.present? %>
                <th class="px-4 py-2">Category</th>
              <% end %>
              <th class="px-4 py-2">Price</th>
              <th class="px-4 py-2">Availability</th>
              <th class="px-4 py-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <%= render product %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center my-10">No products found.</p>
      <% end %>
    </div>
  <% end %>
</div>
