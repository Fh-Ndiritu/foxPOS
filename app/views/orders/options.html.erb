<%= turbo_frame_tag "order_options" do %>
  <% if @products.any? %>
    <div class="w-full grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-4 h-[60vh] pb-[10vh] overflow-y-auto custom-bar">
      <% @products.each do |product| %>
        <%= render partial: "option", locals: { product: product, order: @order } %>
      <% end %>
      </div>
    <% else %>
      <p class=" my-10 text-white w-full text-center">No products found.</p>
    <% end %>
  <% end %>