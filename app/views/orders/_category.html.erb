<div class="item-link gap-4" id="<%= dom_id category %>">
  <%= link_to order_options_path(order, category.id),
    class: "item-thumbnail category-thumbnail rounded-lg h-48 w-48 md:h-48 lg:h-48 text-normal text-white hover:text-text-secondary duration-200 bg-bg-secondary  hover:bg-bg-tertiary custom-bar ",
    data: { turbo_frame: 'order_options' } do %>
    <div class="thumbnail-content ">
      <!-- Image in top-right corner -->
      <div class="image-container">
        <% if category.image.attached? %>
          <img src="<%= category.image.url %>" alt="<%= category.name %>" class="item-image">
        <% end %>
      </div>
      <!-- Stacked title and count at bottom-left -->
      <div class="text-container">
        <div class="item-title text-base font-semibold line-clamp-1"><%= category.name %></div>
        <div class="item-count"><%= category.products.active_and_available.count %> items</div>
      </div>
    </div>
  <% end %>
</div>