<tr class="hover:bg-[#565E60] <%= user.id.even? ? 'bg-bg-secondary': 'bg-bg-primary' %> items-center justify-center text-left" id="<%= dom_id user %>">
 <td class="px-4 py-2 text-center justify-center h-full "><%= user.id %></td>
  <td class="px-4 py-2 flex items-center justify-center  h-full gap-2">
    <div class="w-10 h-10 rounded-full overflow-hidden items-center">
       <% if user.avatar.attached? %>
        <%= image_tag user.avatar.variant(:icon) %>
    <% else %>
      <%= image_tag asset_path("avatar.png") %>
    <% end %>
    </div>
    <div class="h-full items-center text-left ">
      <p class="text-white text-base"><%= user.full_name %></p>
      <span class="text-xs text-text-tertiary m-0"><%= user.role.capitalize %></span>
    </div>
  </td>
  <td class="px-4 py-2 text-center justify-center h-full  min-w-10"><%= user.email%></td>
  <td class="px-4 py-2 text-center justify-center h-full  min-w-10"><%= user.phone%></td>
  <td class="px-4 py-2 text-center justify-center h-full "><%= user.age %></td>
  <td class="px-4 py-2 text-center justify-center h-full "><%= user.salary %></td>
  <td class="px-4 py-2 text-center justify-center h-full "><%= shift_period(user) %></td>
  <td class="px-4 py-2 text-center justify-center h-full   ">
   <div class="flex gap-4">
     <%= link_to new_admin_user_path, data: {turbo_frame: 'edit_staff'} do %>
