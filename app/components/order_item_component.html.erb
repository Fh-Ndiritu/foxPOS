<div class="item-thumbnail order-item-thumbnail rounded-lg h-40 w-40 md:h-40 lg:h-40 text-normal text-white duration-200 bg-bg-secondary  #{@classes} custom-bar "
data="<%= @data %>"
>
  <div class="thumbnail-content ">
    <!-- Image in top-right corner -->
    <div class="size bg-bg-tertiary px-2 text-space-900 absolute left-2 top-2 rounded-lg"> <%= @size %> </div>
    <div class="image-container absolute">
      <% if @image_url %>
        <img src="<%= @image_url %>" alt="<%= @title %>" class="item-image">
      <% end %>
    </div>
    <!-- Stacked title and count at bottom-left -->
    <div class="text-container">
      <div class="item-title text-sm font-semibold line-clamp-1 mb-1"><%= @title %></div>
      <div class="item-title text-xs font-normal line-clamp-1 text-text-tertiary"><%= helpers.currency %> <%= @price %></div>
      <div class="quantity flex justify-end">
        <span class="subtract flex items-center mr-2 cursor-pointer">
          <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="9.5" cy="9.5" r="9.5" fill="#3D4142"/>
            <path d="M5.97266 9.5H13.0257" stroke="white" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="amount flex items-center mx-2">0</span>
        <span class="add flex items-center ml-2 cursor-pointer">
          <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="9.5" cy="9.5" r="9.5" fill="#F8BFD7"/>
            <path d="M9.5 5.97266V13.0257" stroke="#333333" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M5.97266 9.5H13.0257" stroke="#333333" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
      </div>
    </div>
  </div>
