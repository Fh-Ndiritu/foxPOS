<%= link_to @href,
class: @classes,
data: @data do %>
  <div class="thumbnail-content ">
    <!-- Image in top-right corner -->
    <div class="image-container">
      <% if @image_url %>
        <img src="<%= @image_url %>" alt="<%= @title %>" class="item-image">
      <% elsif @svg %>
        <!-- Icon -->
        <!--<span class="">-->
        <%= raw @svg %>
        <!--</span>-->
      <% end %>
    </div>
    <!-- Stacked title and count at bottom-left -->
    <div class="text-container">
      <div class="item-title text-base font-semibold line-clamp-1"><%= @title %></div>
      <div class="item-count"><%= @count %> items</div>
    </div>
  </div>
<% end %>
